<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= button_to 'Show', course %></td>
        <td><%= button_to 'Edit', edit_course_path(course) %></td>
        <td colspan="3"></td>

        <td>

          <%#= link_to 'Destroy', course, method: :destroy, data: { confirm: 'Are you sure?' } %>

          <%= button_to "delete", course, :method=>:delete, :class=>:destroy %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
