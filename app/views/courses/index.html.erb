<p id="notice"><%= notice %></p>

<h1 align="center">Courses</h1>

<table cellpadding="11px">
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr >
      <td><%= course.title %></td>
      <td><%= link_to 'Show', course %></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>

      <td>

        <%#= link_to 'Destroy', course, method: :destroy, data: { confirm: 'Are you sure?' } %>

        <%= button_to "delete", course, :method => :delete, :class => :destroy %>

      </td>
    </tr>
    <tr></tr>
    <tr>
      <td> </td>
      <th bgcolor="#ffebcd" colspan="4">Subjects</th>
    </tr>
    <tbody>
      <% @allsubjects.each do |subject| %>
        <% if course.id == subject.course_id %>
          <tr >
            <td></td>
            <td    bgcolor="#ffebcd"><%= subject.title %></td>
            <td    bgcolor="#ffebcd"><%= link_to 'Show', subject %></td>
            <td    bgcolor="#ffebcd">
              <%#= link_to 'Destroy', subject, method: :delete, data: {confirm: 'Are you sure?'} %>
              <%= button_to "delete", subject, :method => :delete, :class => :destroy %>
            </td>
          </tr>
          <br/>
        <% end %>
      <% end %>
    </tbody>
    </td>
    </tr>

  <% end %>
  </tbody>

  </table>

<br>

