<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td colspan="3"></td>
      <td><%= link_to 'Show', course %></td>
      <td colspan="3"></td>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td colspan="3"></td>

      <td>

        <%#= link_to 'Destroy', course, method: :destroy, data: { confirm: 'Are you sure?' } %>

        <%= button_to "delete", course, :method => :delete, :class => :destroy %>

      </td>
    </tr>
    <tr>
      <td>
      <td colspan="3">
      <th>Subjects</th>
    </tr>
    <tbody>
    <th>
      <% @allsubjects.each do |subject| %>
        <% if course.id == subject.course_id %>
          <tr bgcolor="#CAEBF2">
            <td colspan="6"></td>
            <td><%= subject.title %></td>
            <td colspan="6"></td>
            <td><%= link_to 'Show', subject %></td>
            <td colspan="6"></td>
            <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
            <td colspan="6"></td>
            <td>
              <%#= link_to 'Destroy', subject, method: :delete, data: {confirm: 'Are you sure?'} %>
              <%= button_to "delete", subject, :method => :delete, :class => :destroy %>
            </td>
          </tr>
          <br/>
        <% end %>
      <% end %>
    </th>
    </tbody>
    </td>
    </tr>

  <% end %>
  </tbody>

  </table>

<br>

<%= link_to 'New Course', new_course_path %>
