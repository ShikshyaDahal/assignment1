<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %> |

<h2>Subjects</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
  </tr>
  </thead>

  <tbody>
  <% @subject.each do |course| %>
    <% if @course.id == course.course_id %>
      <td>
      <td><%= course.title %></td>
      <td>   <%= button_to "delete", course, :method=>:delete, :class=>:destroy %></td>
      <br/>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<br/>
<br/>
<%= link_to 'New Subject', new_subject_path(params1: @course.id) %>